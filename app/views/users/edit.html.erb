
<%= form_for @user, method: :put, url: user_path(@user) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role, [['scientist', 'scientist'], ['researcher','researcher'], ['admin', 'admin']] %>
  </div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<%end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
